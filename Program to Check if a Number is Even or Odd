
using System;

class Program
{
    static void Main(string[] args)
    {
        Console.Write("Enter a number: ");
        int num = Convert.ToInt32(Console.ReadLine());
        if (num % 2 == 0)
            Console.WriteLine("The number is even");
        else
            Console.WriteLine("The number is odd");
    }
}




   Output:
Enter a number: 20
The number is even
